@model IEnumerable<CineplexCustomerWebsite.Models.MovieComingSoon>

@{
    ViewBag.Title = "MovieComingSoon";
}
<h2>Movies: Coming Soon</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink((item.Title), "MovieDetails", new { id = item.MovieComingSoonID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>
            <td>
                <img class="map" height="200px" src="../@item.ImageUrl" />
            </td>

        </tr>
    }
</table>
